        android:label="E-Perpus"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Library"
        tools:targetApi="31">
        <activity
            android:name=".view.SekolahActivity"
            android:exported="true"
            android:label="@string/title_activity_sekolah"
            android:theme="@style/Theme.Library" />
        <activity
            android:name=".view.PenggunaActivity"
            android:exported="true" />
        <activity
            android:name=".view.EditBookActivity"
            android:exported="false"
            android:label="@string/title_activity_edit_book"
